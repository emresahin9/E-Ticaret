
@{
    ViewBag.Title = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_Site_Layout.cshtml";
}
<div class="offset-md-4 offset-2">
    <form method="post" action="/SifremiUnuttumm">
        @Html.AntiForgeryToken()
        <div class="alert col-lg-7 col-md-9 col-sm-7 col-9" style="text-align:center;color:red">@ViewBag.Sonuc</div>
        <div class="form-group" style="padding-bottom:10px">
            <input class="form-control col-lg-7 col-md-9 col-sm-7 col-9" name="email" type="email" required placeholder="Eposta Adresi" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-outline-secondary btn-lg col-lg-7 col-md-9 col-sm-7 col-9">Yeni Şifre İste</button>
        </div>
        <a href="/KullaniciGiris" style="text-decoration:none;color:cadetblue;font-size:15px" class="offset-5">Giriş Sayfasına Dön</a>
    </form>
</div>
