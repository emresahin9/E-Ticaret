@model E_Ticaret.Models.Contact

@{
    ViewBag.Title = "İletişim Bilgileri Düzenle";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<h2>İletişim Adresleri</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="alert-info" style="text-align:center;font-size:20px">@ViewBag.Result</div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.contactId)

    <div class="form-group">
        @Html.LabelFor(model => model.contactEmail, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.contactEmail, new { htmlAttributes = new { @class = "form-control col-md-6" } })
            @Html.ValidationMessageFor(model => model.contactEmail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.contactAdress, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.contactAdress, new { htmlAttributes = new { @class = "form-control col-md-6" } })
            @Html.ValidationMessageFor(model => model.contactAdress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.contactTel, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.contactTel, new { htmlAttributes = new { @class = "form-control col-md-6" } })
            @Html.ValidationMessageFor(model => model.contactTel, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <button class="btn btn-block btn-outline-secondary btn-lg col-md-6" type="submit">Değişiklikleri Kaydet</button>
        </div>
    </div>
</div>
}
