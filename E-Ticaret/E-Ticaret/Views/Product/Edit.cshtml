@model E_Ticaret.Models.Product

@{
    ViewBag.Title = "Ürün Düzenle";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>@Model.productName Ürünün Bilgilerini Değiştir</h4>
    <hr />
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.productId)

        <div class="form-group">
            @Html.LabelFor(model => model.productName, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.productName, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.productName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.productDescription, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.productDescription, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.productDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Bulunduğu Kategori</label>
            <div class="col-md-10">
                @Html.DropDownList("categoryId", null, htmlAttributes: new { @class = "form-control col-md-6" })
                @Html.ValidationMessageFor(model => model.categoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Ürün Resmi</label>
            <div class="col-md-10"><input type="file" accept=".jpg,.jpeg,.png" class="form-control col-md-6" name="imageUrl" /></div>
        </div>

        <div class="=form-group">
            @Html.LabelFor(model => model.price, new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="=form-group">
            @Html.LabelFor(model => model.stock, new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.stock, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding-top:20px">
            <div class="col-md-10">
                <button class="btn btn-block btn-outline-secondary btn-lg col-md-6" type="submit">Bilgileri Güncelle</button>
            </div>
        </div>
    </div>
}
