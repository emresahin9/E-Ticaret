@model E_Ticaret.Models.Category

@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h4>Yeni kategori Ekleme</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.categoryName, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control col-md-6"} })
                @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <button class="btn btn-block btn-outline-secondary btn-lg col-md-6" type="submit">Kategori Ekle</button>
            </div>
        </div>
    </div>
}
