@{
    Layout = null;
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link rel="shortcut icon" href="~/Images/logo.ico" />
<!DOCTYPE html>

<html  lang="tr">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Şifremi Unuttum</title>
    <style>
        .alert {
            color: red;
        }
    </style>
</head>
<body style="background-color:aliceblue">
    <div class="container">
        <div class="row justify-content-center">
            <form method="post" action="YonetimSifremiUnuttum" style="padding-top:250px" class="col-xl-5 col-lg-6 col-md-8 col-10">
                @Html.AntiForgeryToken()
                <div style="border:1px solid cadetblue;border-radius:15px">
                    <div style="padding:20px">
                        <div class="alert" style="text-align:center">@ViewBag.Sonuc</div>
                        <div class="form-group" style="padding-bottom:20px">
                            <input style="font-size:20px" class="form-control" name="email" type="email" required placeholder="Eposta Adresi" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-outline-secondary btn-lg">Yeni Şifre İste</button>
                        </div>
                        <a href="/YonetimGiris" style="text-decoration:none;color:cadetblue;font-size:20px" class="offset-6">Giriş Sayfasına Dön</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
