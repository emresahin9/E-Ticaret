@model E_Ticaret.Models.Admin

@{
    ViewBag.Title = "Yönetici Profil";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h2>Kullanıcı Bilgileri</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal justify-content-center">
    <div class="alert" style="color:red">@ViewBag.result</div>
    <div class="form-group">
        @Html.LabelFor(model => model.adminFullname, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.adminFullname, new { htmlAttributes = new { @class = "form-control col-md-6" } })
            @Html.ValidationMessageFor(model => model.adminFullname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.adminEmail, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.adminEmail, new { htmlAttributes = new { @class = "form-control col-md-6" } })
            @Html.ValidationMessageFor(model => model.adminEmail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3">Eski Şifre</label>
        <div class="col-md-10">
            <input class="form-control col-md-6" type="password" name="adminPassword" required/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3">Yeni Şifre</label>
        <div class="col-md-10">
            <input class="form-control col-md-6" type="password" name="adminPasswordnew" required/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <button type="submit" class="btn btn-block btn-outline-secondary btn-lg col-md-6">Güncelle</button>
        </div>
    </div>
</div>
}